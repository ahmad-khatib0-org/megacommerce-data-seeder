# Multi-stage build for Python data seeder service
FROM python:3.12-slim-bookworm AS base

WORKDIR /app

ENV ENV=dev \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    postgresql-client \
    curl \
    git && rm -rf /var/lib/apt/lists/*

# Builder stage
FROM base AS builder

COPY requirements/base.txt requirements/git.txt ./

# First install Git-based dependencies with --no-deps
RUN pip install --user --no-warn-script-location --no-deps -r git.txt

# Then install other dependencies
RUN pip install --user --no-warn-script-location -r base.txt

# Development stage
FROM base AS dev

# Copy Python packages from builder
COPY --from=builder /root/.local /root/.local
ENV PATH=/root/.local/bin:$PATH

COPY . .

CMD ["python", "main.py"]
